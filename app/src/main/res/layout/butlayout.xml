<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="89dp">


    <Button
        android:id="@+id/chroniclebut"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:background="@color/black_overlay"
        android:text="CHRONICLE"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/felicitationbut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/felicitationbut"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:background="@drawable/arrow_but"
        android:text="FELICITATION"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/festivalsbut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chroniclebut" />

    <Button
        android:id="@+id/festivalsbut"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:background="@color/black_overlay"
        android:text="festivals"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/guestsbut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/felicitationbut" />

    <Button
        android:id="@+id/guestsbut"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:background="@color/black_overlay"
        android:text="GUESTS"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/festivalsbut" />

</android.support.constraint.ConstraintLayout>